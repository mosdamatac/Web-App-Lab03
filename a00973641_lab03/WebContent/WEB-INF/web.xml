<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
 	<servlet>
 		<servlet-name>InputGreeting</servlet-name>
 		<jsp-file>/resources/InputGreeting.jsp</jsp-file>
 		<init-param>
 			<param-name>submitMsg</param-name>
 			<param-value>Type your first name and press &quot;Submit&quot;</param-value>
 		</init-param>
 		<init-param>
 			<param-name>welcomeMsg</param-name>
 			<param-value>Welcome to JavaServerPages!</param-value>
 		</init-param>
 	</servlet>       
 	<servlet-mapping>
 		<servlet-name>InputGreeting</servlet-name>
 		<url-pattern>/InputGreeting</url-pattern>
 	</servlet-mapping>
</web-app>